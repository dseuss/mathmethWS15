% TikZ Fun
\newcommand{\drawgrid}[4]{%
  \foreach \x in {#1,...,#2}{%
    \draw [coordline] (\x,#3-.5) -- (\x,#4+.5);  
  }
  \foreach \y in {#3,...,#4}{%
    \draw [coordline] (#1-.5,\y) -- (#2+.5,\y);  
  }
}